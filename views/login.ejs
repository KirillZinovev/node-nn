  <body>
    <header><%- include('header.ejs')%></header>

    <input
      class="button"
      type="button"
      onclick="history.back();"
      value="Назад"
      style="margin-left: 30px; margin-top: 10px; padding-top: 0"
    />

    <h4 class="text-center mt-5">Вход</h4>
    <form
      class="container col-sm-6"
      style="margin-bottom: 100px; margin-top: 20px"
